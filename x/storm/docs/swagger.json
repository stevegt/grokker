{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Single-daemon, single-port multi-project LLM chat application",
        "title": "Storm API",
        "contact": {},
        "version": "0.0.76"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/project/{projectID}/": {
            "get": {
                "description": "Returns the main chat page for a project",
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "projects"
                ],
                "summary": "Get project chat page",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Project ID",
                        "name": "projectID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "HTML content",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Project not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/project/{projectID}/open": {
            "get": {
                "description": "Returns the contents of a file",
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Open a file",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Project ID",
                        "name": "projectID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "File path",
                        "name": "filename",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "File content",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "File not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/project/{projectID}/rounds": {
            "get": {
                "description": "Returns total number of chat rounds",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "projects"
                ],
                "summary": "Get chat rounds",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Project ID",
                        "name": "projectID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "integer"
                            }
                        }
                    },
                    "404": {
                        "description": "Project not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/project/{projectID}/tokencount": {
            "get": {
                "description": "Calculates token count for current conversation",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "projects"
                ],
                "summary": "Get token count",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Project ID",
                        "name": "projectID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "integer"
                            }
                        }
                    },
                    "404": {
                        "description": "Project not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/project/{projectID}/ws": {
            "get": {
                "description": "Establishes WebSocket connection for real-time chat updates",
                "tags": [
                    "projects"
                ],
                "summary": "WebSocket connection for project",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Project ID",
                        "name": "projectID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "101": {
                        "description": "Switching Protocols"
                    },
                    "404": {
                        "description": "Project not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/stop": {
            "post": {
                "description": "Gracefully shutdown the server",
                "tags": [
                    "server"
                ],
                "summary": "Stop server",
                "responses": {
                    "200": {
                        "description": "Server stopping",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}